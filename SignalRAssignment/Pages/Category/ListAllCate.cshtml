@page
@model SignalRAssignment.Pages.Category.ListAllCateModel
@{
}
<h1>Categories Management</h1>
<a class="btn btn-primary" asp-page="./CreateCate">Create new</a>

<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <td>Name</td>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model.ListAll)
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td>
                        <a class="btn btn-primary" asp-page="./UpdateCate" asp-route-id="@item.CategoryId">Edit</a>
                        <form method="post">
                            <input type="hidden" name="cateId" value="@item.CategoryId" />
                            <input class="btn btn-outline-primary" type="submit" value="Delete" />
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>