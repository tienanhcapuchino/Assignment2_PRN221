@page
@model SignalRAssignment.Pages.Category.UpdateCateModel
@{
}
<h1>Update Category</h1>
<div>
    <form method="post">
        <input type="text" asp-for="Cate.CategoryId" hidden />
        <div class="form-group">
            <label class="control-label">Name</label>
            <input asp-for="Cate.CategoryName" placeholder="enter name" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Description</label>
            <input asp-for="Cate.Description" type="text" placeholder="enter description" class="form-control" />
        </div>
        <input class="btn btn-primary" type="submit" value="Save" />
    </form>
</div>