@page
@model SignalRAssignment.Pages.Customer.ProfileModel
@{
}
<h1>Update your profile</h1>

<div>
    <form method="post">
        <input type="text" asp-for="Cus.CustomerId" hidden />
        <div class="form-group">
            <label class="control-label">Name</label>
            <input asp-for="Cus.ContactName" placeholder="enter name" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Password</label>
            <input asp-for="Cus.Password" type="text" placeholder="enter password" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Address</label>
            <input asp-for="Cus.Address" type="text" placeholder="enter address" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Phone</label>
            <input asp-for="Cus.Phone" type="tel" placeholder="enter phone" class="form-control" />
        </div>
        <input class="btn btn-primary" type="submit" value="Save" />
    </form>
    @{
        if (Model.MessageError != null)
        {
            <span class="text text-primary">@Model.MessageError</span>
        }
    }
</div>