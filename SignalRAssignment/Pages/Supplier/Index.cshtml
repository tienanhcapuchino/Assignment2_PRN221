@page
@model SignalRAssignment.Pages.Supplier.IndexModel
@{
}
<h1>Suppliers Management</h1>
<a class="btn btn-primary" asp-page="./Add">Create new</a>
<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <td>CompanyName</td>
            <th>Address</th>
            <th>Phone</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model.AllSup)
            {
                <tr>
                    <td>@item.CompanyName</td>
                    <td>@item.Address</td>
                    <td>@item.Phone</td>
                    <td>
                        <a class="btn btn-primary" asp-page="./Update" asp-route-id="@item.SupplierId">Edit</a>
                        <form method="post">
                            <input type="hidden" name="supId" value="@item.SupplierId" />
                            <input class="btn btn-outline-primary" type="submit" value="Delete" />
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>