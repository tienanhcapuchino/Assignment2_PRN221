@page
@model SignalRAssignment.Pages.Supplier.UpdateModel
@{
}
<h1>Update Supplier</h1>
<div>
    <form method="post">
        <input type="text" hidden asp-for="Sup.SupplierId" />
        <div class="form-group">
            <label class="control-label">Name</label>
            <input asp-for="Sup.CompanyName" placeholder="enter name" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Address</label>
            <input asp-for="Sup.Address" type="text" placeholder="enter address" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Phone</label>
            <input asp-for="Sup.Phone" type="tel" placeholder="enter phone" class="form-control" />
        </div>
        <input class="btn btn-primary" type="submit" value="Save" />
    </form>
</div>